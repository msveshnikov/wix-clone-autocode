        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "express-rate-limit": "^5.5.0",
        "express-session": "^1.17.2",
        "graphql": "^15.7.2",
        "graphql-subscriptions": "^2.0.0",
        "graphql-tools": "^8.2.0",
        "helmet": "^4.6.0",
        "joi": "^17.4.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.0.12",
        "morgan": "^1.10.0",
