        "faker": "^5.5.3",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^11.2.6",
        "mongodb-memory-server": "^8.0.0",
        "nodemon": "^2.0.14",
        "prettier": "^2.4.1",
        "supertest": "^6.1.6"
